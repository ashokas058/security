<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ashok_ray.security">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".osafirebase"
        android:allowBackup="true"
        android:icon="@mipmap/logomak"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Module_AUTH.ACT_Login"
            android:noHistory="true" />
        <activity
            android:name=".Module_HOME.ACT_Home"
            android:noHistory="true"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Module_AUTH.ACT_Register"
            android:noHistory="true" />
        <activity android:name=".Module_SETTINGS.ACT_Settings" />
        <activity android:name=".Module_SETTINGS.ACT_UpdateUser" />
        <activity android:name=".Module_PROFILE.ACT_LearnForm" />
        <activity android:name=".Module_CHAT.ACT_PrivateChat" />
        <activity android:name=".Module_SSH.ACT_SshSettings"></activity>
    </application>

</manifest>