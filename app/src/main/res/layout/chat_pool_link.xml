<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_chat_pool_drawable">

    <Button
        android:drawableLeft="@drawable/ic_pool_black_24dp"
        android:background="@drawable/back_button_chat_pool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Chat Pool"
        android:textSize="25dp"
        android:id="@+id/chatpool_buton" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chatpool_buton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="World CEH community" />

</RelativeLayout>