<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/main_layout_view_design">

        <RelativeLayout
            android:id="@+id/linearLayout"
            android:background="@drawable/shade_texter_design"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/new_profile1_id"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/shade_texter_design"
                android:id="@+id/relativeLayout4">

                <TextView
                    android:id="@+id/new_profile1_name_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="42dp"
                    android:gravity="center"
                    android:text="Name"
                    android:textAllCaps="true"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="250dp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/new_profile1_id"
                android:layout_marginTop="20dp"
                android:text="Theory"
                android:textAllCaps="true"
                android:textColor="@color/white" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/recycler_design_dra" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView5"
                android:layout_below="@+id/recycler_horizontal"
                android:text="News"
                android:layout_marginTop="5dp"
                android:textAllCaps="true"
                android:textAlignment="textStart"
                android:textColor="#ffffff" />

            <android.support.v7.widget.RecyclerView

                android:id="@+id/recycler_horizontal2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView4"
                android:background="@drawable/recycler_design_dra" />


        </RelativeLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="123dp"
        app:cardBackgroundColor="#24fafafa"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <RelativeLayout

            android:id="@+id/relativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:orientation="horizontal"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <TextView
                android:textColor="#ff0000"
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:drawableStart="@drawable/ic_message_black_24dp"
                android:text="10+"

                android:textAlignment="center"
                />

            <TextView
                android:textColor="@color/white"

                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:drawableStart="@drawable/ic_pool_black_24dp"
                android:text="Begineer"
                android:textAlignment="viewStart"
               />

            <TextView
                android:textColor="@color/white"

                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/textView6"
                android:layout_marginHorizontal="80dp"
                android:layout_marginStart="27dp"
               android:layout_alignParentEnd="true"
                android:drawableStart="@drawable/ic_search_black_24dp"
                android:text="Search"
                android:textAlignment="viewEnd" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>