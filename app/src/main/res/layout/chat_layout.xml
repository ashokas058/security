<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/reciver_relative_id"
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/reciver_chat_design_textview">


        <TextView
            android:id="@+id/reciver_message_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/reciver_pic_id"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/reciver_pic_id"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@color/black" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/reciver_username_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/reciver_message_id"
            android:text="@string/username"
            android:textColor="#e7e4e4" />

        <TextView
            android:layout_alignParentEnd="true"
            android:id="@+id/reciver_message_time_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reciver_message_id"
            android:text="time"
            android:textColor="#e7e4e4" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:id="@+id/sender_realtive_id"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:background="@drawable/sender_chat_design">

        <TextView
            android:id="@+id/sender_message_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sender"
            android:textAlignment="viewStart"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/sender_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/sender_message_id"
            android:layout_marginTop="1dp"
            android:text="username"
            android:textAlignment="viewEnd"
            android:textColor="#e7e4e4" />

        <TextView

            android:id="@+id/sender_time_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/sender_user_id"
            android:layout_alignBottom="@+id/sender_user_id"
            android:layout_marginStart="5dp"
           android:layout_alignParentEnd="true"
            android:text="recive time"
            android:textAlignment="viewStart"
            android:textColor="#e7e4e4" />

    </RelativeLayout>


</RelativeLayout>