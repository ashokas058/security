<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ashok_ray.security.Module_AUTH.ACT_Register"
    android:background="@drawable/main_layout_view_design">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="39dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/logomak" />

    <TextView
        android:textColor="@color/white"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Register With Us"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/layout_des"
        app:layout_constraintBottom_toTopOf="@+id/reg_reg_bt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <EditText
            android:hint="FullName"
            android:textColorHint="@color/white"
            android:drawableLeft="@drawable/ic_person_outline_black_24dp"
            android:id="@+id/fullname_reg_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:ems="10"
            android:inputType="textPersonName"
            />

        <EditText
            android:hint="Email"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:id="@+id/email_reg_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fullname_reg_id"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColorHint="@color/white" />

        <EditText
            android:hint="Password"
            android:textColorHint="@color/white"
            android:id="@+id/pass_reg_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/email_reg_id"
            android:layout_below="@+id/email_reg_id"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/ic_lock"/>

        <EditText
            android:id="@+id/confpass_reg_id"
            android:textColorHint="@color/white"
            android:hint="ConfirmPassword"
            android:drawableLeft="@drawable/ic_lock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/pass_reg_id"
            android:layout_below="@+id/pass_reg_id"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="textPassword"
            />
    </RelativeLayout>

    <Button
        android:textColor="@color/white"
        android:id="@+id/reg_reg_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="118dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/layout_des"
        android:text="Register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2" />
</android.support.constraint.ConstraintLayout>
